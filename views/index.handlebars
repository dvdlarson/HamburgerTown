
<div class="container">
    <div id="burgerarea" class="row text-center">
        <div  class="col-md-12">
        <h1 id="siteTitle">Hamburger Town!</h1>
        </div>
        <div class="col-md-6">
        <h2 class="columnTitle">Burgers available to eat:</h2>

        <ul>
         {{#each burgers}}
            {{#unless this.devoured}}
            <li class="burgerlist">{{this.name}}
                <button type="submit" data-id={{id}} class="eatIt">Eat It!</button>
            </li>
            {{/unless}}
            {{/each}}
            
        </ul>
        </div>{{!--uneaten--}}
        <div class="col-md-6">
        <h2 class="columnTitle">Burgers already eaten</h2>

        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li class="burgerlist">{{this.name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
        </div>{{!--eaten--}}
<div class="col-md-12" id="add-burger">
  <form id="burgerform" class="add-burger">
    <div class="row text-center formtitle" id="createTitle">Create a burger:</div><br>
    <input type="text" id="newBurger" name="newBurger">
    <br>
    <button type ="submit">Submit</button>
</form>
</div>
    </div>{{!--main row--}}
</div>{{!--container--}}